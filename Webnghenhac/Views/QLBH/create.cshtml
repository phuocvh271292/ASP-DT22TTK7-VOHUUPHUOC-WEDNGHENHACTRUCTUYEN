@using WebApplication1.Models


<div class="Root__main-view">
    <div class="main-view-container">
        <div style="margin-top: 64px;">

        </div>
        @using (Html.BeginForm("create", "QLBH", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h1>Thêm bài hát</h1>
                <hr />
                <div>
                    <div class="form-group">
                        <label> Tên bài hát</label>
                        <div class="col-md-10">
                            <input type="text" value="" name="TenBH" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>File nhạc</label>
                        <div class="col-md-10">
                            <input type="file" name="filenhac" class="form-control" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Ảnh</label>
                        <div class="col-md-10">
                            <input type="file" name="fileanh" class="form-control" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Ngày phát hành</label>
                        <div class="col-md-10">
                            <input type="date" name="NgayPH" class="form-control" required/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Ca sĩ</label>
                        <div class="col-md-10">
                           @Html.DropDownList("MaCS", ViewBag.Casis as SelectList, "---chọn ca sĩ---", new { @class="form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Thể loại</label>
                        <div class="col-md-10">
                            @Html.DropDownList("MaTL", ViewBag.Theloais as SelectList, "---chọn thể loại---", new { @class="form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Chủ đề</label>
                        <div class="col-md-10">
                            @Html.DropDownList("MaCD", ViewBag.Chudes as SelectList, "---chọn chủ đề---", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn-default" />
                        </div>
                    </div>
                </div>
                </div>
        }
    </div>
</div>